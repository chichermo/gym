# Configuración del servidor
PORT=5000
NODE_ENV=development

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/fitness-app

# JWT Secret
JWT_SECRET=tu_jwt_secret_aqui

# Frontend URL
FRONTEND_URL=http://localhost:3000

# APIs de Wearables

# Fitbit API
FITBIT_CLIENT_ID=tu_fitbit_client_id
FITBIT_CLIENT_SECRET=tu_fitbit_client_secret
FITBIT_REDIRECT_URI=http://localhost:5000/api/wearables/callback/fitbit

# Garmin Connect API
GARMIN_CLIENT_ID=tu_garmin_client_id
GARMIN_CLIENT_SECRET=tu_garmin_client_secret
GARMIN_REDIRECT_URI=http://localhost:5000/api/wearables/callback/garmin

# Google Fit API
GOOGLE_FIT_CLIENT_ID=tu_google_fit_client_id
GOOGLE_FIT_CLIENT_SECRET=tu_google_fit_client_secret
GOOGLE_FIT_REDIRECT_URI=http://localhost:5000/api/wearables/callback/google_fit

# Samsung Health API
SAMSUNG_CLIENT_ID=tu_samsung_client_id
SAMSUNG_CLIENT_SECRET=tu_samsung_client_secret
SAMSUNG_REDIRECT_URI=http://localhost:5000/api/wearables/callback/samsung_health

# Apple HealthKit (para desarrollo web, se maneja diferente en móvil)
APPLE_HEALTHKIT_TEAM_ID=tu_apple_team_id
APPLE_HEALTHKIT_KEY_ID=tu_apple_key_id
APPLE_HEALTHKIT_PRIVATE_KEY=tu_apple_private_key

# Configuración de WebSocket para datos en tiempo real
WEBSOCKET_PORT=5001

# Configuración de seguridad
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d

# Configuración de archivos (opcional)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads 